{{> html-begin}}
<body class="services">
    {{> nav}}

    <section class="hero">
        <img class="hero-logo" src="img/logo-light.png"/>
        <p class="tagline">
            Custom-tailored academic advising as unique as you are.
        </p>
    </section>
